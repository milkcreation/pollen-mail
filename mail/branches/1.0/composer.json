{
  "name": "pollen-solutions/mail",
  "description": "Pollen Mail Component - Email Api",
  "homepage": "https://www.presstify.com/pollen-solutions/mail/",
  "keywords": [
    "pollen-solutions",
    "component",
    "cookie"
  ],
  "time": "2021-06-28",
  "license": "MIT",
  "authors": [
    {
      "name": "Jordy Manner",
      "email": "jordy@presstify.com",
      "role": "Developper"
    }
  ],
  "repositories": [
    {
      "type": "composer",
      "url": "https://composer.presstify.com/pollen-solutions/"
    }
  ],
  "require": {
    "php": ">=7.4",
    "composer/composer": "^2.0",
    "composer/installers": "~1.0",
    "html2text/html2text": "^4.3",
    "pelago/emogrifier": "^5.0",
    "phpmailer/phpmailer": "^6.3",
    "pollen-solutions/support": "^1.0",
    "pollen-solutions/validation": "^1.0",
    "pollen-solutions/view": "^1.0",
    "pollen-solutions/view-extends": "^1.0",
    "symfony/dom-crawler": "^5.2"
  },
  "require-dev": {
    "phpunit/phpunit": "^9.0"
  },
  "autoload": {
    "psr-4": {
      "Pollen\\Mail\\": "src"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Pollen\\Mail\\Test\\": "tests"
    }
  },
  "suggest": {
    "pollen-solutions/container" : "Pollen Container Component - PSR-11 ready Dependencies Injection Container"
  },
  "minimum-stability": "dev",
  "prefer-stable": true,
  "config": {
    "optimize-autoloader": true,
    "preferred-install": "dist",
    "sort-packages": true
  }
}
